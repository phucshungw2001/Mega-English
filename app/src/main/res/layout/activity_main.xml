<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".MainActivity">

  <ImageView
      android:id="@+id/bkgimg"
      android:layout_width="411dp"
      android:layout_height="733dp"
      android:src="@drawable/background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/btnSchool"
      android:layout_width="124dp"
      android:layout_height="56dp"
      android:layout_marginStart="144dp"
      android:layout_marginRight="144dp"
      android:background="@drawable/button_layout"
      android:text="Bài Tập"
      app:layout_constraintBottom_toBottomOf="@+id/bkgimg"
      app:layout_constraintRight_toRightOf="@+id/bkgimg"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.278"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/btnSync"
      android:layout_width="124dp"
      android:layout_height="56dp"
      android:layout_marginLeft="144dp"
      android:layout_marginEnd="144dp"
      android:layout_marginBottom="568dp"
      android:background="@drawable/button2_layout"
      android:text="Tổng hợp"
      app:layout_constraintBottom_toBottomOf="@+id/bkgimg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintLeft_toLeftOf="@+id/bkgimg"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.99"
      tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>