<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#247AAA"
    tools:context=".samplesentence_activity">


    <TextView
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="#247AAA"
        android:text="Topic"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="374dp"
        android:layout_height="435dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/frames_layout"
        android:padding="7dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.496"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGreeting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_2"
                    android:textColor="#1B1919"
                    android:text="greeting" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnJob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:textColor="#1B1919"
                    android:background="@drawable/btn_theme_1"
                    android:text="job" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnHealth"
                    android:layout_width="match_parent"
                    android:textColor="#1B1919"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_2"
                    android:text="health" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnEntertain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#1B1919"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_1"
                    android:text="entertainment" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnPlace"
                    android:layout_width="match_parent"
                    android:textColor="#1B1919"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_2"
                    android:text="place" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnEating"
                    android:layout_width="match_parent"
                    android:textColor="#1B1919"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_1"
                    android:text="eating" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnMore"
                    android:layout_width="match_parent"
                    android:textColor="#1B1919"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_theme_2"
                    android:text="more..." />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>